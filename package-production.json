{
  "name": "barbershop-self-hosted",
  "version": "1.0.0",
  "description": "Self-hosted barbershop management system",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "esbuild server/index.ts --bundle --platform=node --target=node18 --outfile=dist/server/index.js --external:pg-native",
    "build:client": "vite build",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.5",
    "@tanstack/react-query": "^5.59.16",
    "connect-pg-simple": "^10.0.0",
    "drizzle-orm": "^0.37.0",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.13.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.5.13",
    "drizzle-kit": "^0.30.0",
    "esbuild": "^0.24.0",
    "vite": "^6.0.1"
  }
}